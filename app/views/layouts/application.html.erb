<!DOCTYPE html>
<html>
  <head>
    <title>Enterprise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to 'Inicio', root_path %></li>
        <li><%= link_to 'Sobre Nosotros', bienvenida_about_path %></li>
        <li><%= link_to 'Contacto', bienvenida_contacto_path %></li>
        <li><%= link_to 'CaracterÃ­sticas', bienvenida_caracteristicas_path %></li>
        <li><%= link_to 'FAQs', bienvenida_faq_path %></li>
        <li><%= link_to 'Precios', bienvenida_precios_path %></li>

        <% if current_usuario %>
          <li><%= link_to 'Salir', destroy_usuario_session_path, method: :delete %></li>
          <div class="btn-group pull-right right-nav">
            <button type="button" class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span clas="sr-only"> Admin</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Facturas', facturas_path %></li>
              <li><%= link_to 'Empleados', empleados_path %></li>
              <li><%= link_to 'Empresas', empresas_path %></li>
            </ul>
          </div>
        <% else %>
          <li><%= link_to 'Ingresar', new_usuario_session_path %></li>
          <li><%= link_to 'Registrarse', new_usuario_registration_path %></li>
        <% end %>
      </ul>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
